<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.sh.android.ucl.fragment.NavigationDrawerFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ccc"
            android:padding="10dp"
            android:text="Group Phase"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/first_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_header">

            <TextView
                android:id="@+id/group_A"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:layout_weight="0.25"
                android:background="@color/blue"
                android:gravity="center"
                android:text="A"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/group_B"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:layout_weight="0.25"
                android:background="@color/purple"
                android:gravity="center"
                android:text="B"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/group_C"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:layout_weight="0.25"
                android:background="@color/green"
                android:gravity="center"
                android:text="C"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/group_D"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:layout_weight="0.25"
                android:background="@color/orange"
                android:gravity="center"
                android:text="D"
                android:textColor="#fff" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/second_row"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_row">

            <TextView
                android:id="@+id/group_E"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@color/blue_2"
                android:gravity="center"
                android:text="E"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/group_F"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@color/purple_2"
                android:gravity="center"
                android:text="F"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/group_G"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@color/green_2"
                android:gravity="center"
                android:text="G"
                android:textColor="#fff" />

            <TextView
                android:id="@+id/group_H"
                android:layout_width="20dp"
                android:layout_height="48dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@color/orange_2"
                android:gravity="center"
                android:text="H"
                android:textColor="#fff" />

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:padding="10dp"
        android:text="KO Phase"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/list_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:choiceMode="singleChoice"
        android:divider="#eee"
        android:dividerHeight="1dp" />

</LinearLayout>
